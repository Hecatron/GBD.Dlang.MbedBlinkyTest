{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (JLink Segger) - Cortex GDB",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "cwd": "${workspaceRoot}",
	        "svdFile": "${workspaceFolder}/scripts/svd/STM32F7x7.svd",
            "executable": "./mbed-build/BUILD/NUCLEO_F767ZI/GCC_ARM/mbed-build.elf",
            "device": "STM32F767ZI",
            "interface": "swd",
        },
        {
            "name": "Debug (OpenOCD USB) - Cortex GDB",
            "type": "cortex-debug",
            "request": "launch",
            "device": "LPC176x5x",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "svdFile": "${workspaceFolder}/scripts/svd/STM32F7x7.svd",
            "executable": "./mbed-build/BUILD/NUCLEO_F767ZI/GCC_ARM/mbed-build.elf",
            "configFiles": [
                "${workspaceRoot}/scripts/openocd_configs/usb_boardconf_stlink.cfg"
            ]
        },
        {
            "name": "Debug (OpenOCD USB) - Attach to GDB",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceRoot}/mbed-build/BUILD/NUCLEO_F767ZI/GCC_ARM/mbed-build.elf",
            "target": ":3333",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "gdbpath": "arm-none-eabi-gdb.exe",
            "autorun": [
                "monitor reset halt",
                "load ./mbed-build/BUILD/NUCLEO_F767ZI/GCC_ARM/mbed-build.elf",
                "monitor arm semihosting enable"
             ]
        },
        {
            "name": "Debug (JLink Segger) - Attach to GDB",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceRoot}/mbed-build/BUILD/NUCLEO_F767ZI/GCC_ARM/mbed-build.elf",
            "target": ":2331",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "gdbpath": "arm-none-eabi-gdb.exe",
            "autorun": [
                "load ./mbed-build/BUILD/NUCLEO_F767ZI/GCC_ARM/mbed-build.elf",
                "monitor semihosting enable",
                "monitor reset",
                "monitor halt"
             ]
        },
    ]
}